<style>
  .about-page {
    padding-top: 80px;
  }

  .about-hero {
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--spacing-xl);
    align-items: center;
  }

  .about-text h1 {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    margin-bottom: var(--spacing-sm);
    background: linear-gradient(135deg, var(--color-dark), var(--color-accent));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .lead {
    font-size: 1.3rem;
    line-height: 1.6;
    color: var(--color-gray-dark);
    margin-bottom: var(--spacing-md);
  }

  .about-image {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .about-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .story-section {
    padding: var(--spacing-xl) 0;
  }

  .story-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-xl);
    align-items: start;
  }

  .story-content h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-dark);
  }

  .story-text p {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
    color: var(--color-gray-dark);
  }

  .experience-highlights {
    background: var(--color-white);
    padding: var(--spacing-lg);
    border-radius: 16px;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--color-gray-light);
  }

  .experience-highlights h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-dark);
    text-align: center;
  }

  .highlight-items {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }

  .highlight-item {
    text-align: center;
  }

  .highlight-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-accent);
    font-family: var(--font-display);
  }

  .highlight-label {
    font-size: 0.9rem;
    color: var(--color-gray);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .services-expertise {
    padding: var(--spacing-xl) 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  }

  .services-expertise h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: var(--spacing-xl);
    color: var(--color-dark);
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
  }

  .expertise-item {
    background: var(--color-white);
    padding: var(--spacing-lg);
    border-radius: 16px;
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-normal);
  }

  .expertise-item:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .expertise-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }

  .expertise-item h3 {
    font-size: 1.3rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-dark);
  }

  .expertise-item p {
    color: var(--color-gray-dark);
    line-height: 1.6;
  }

  .approach-section {
    padding: var(--spacing-xl) 0;
  }

  .approach-content h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: var(--spacing-xl);
    color: var(--color-dark);
  }

  .approach-steps {
    display: grid;
    gap: var(--spacing-lg);
    max-width: 800px;
    margin: 0 auto;
  }

  .step {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: var(--spacing-md);
    align-items: start;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--color-accent);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    font-family: var(--font-display);
  }

  .step-content h3 {
    font-size: 1.3rem;
    margin-bottom: var(--spacing-xs);
    color: var(--color-dark);
  }

  .step-content p {
    color: var(--color-gray-dark);
    line-height: 1.6;
  }

  .cta-section {
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, var(--color-accent), var(--color-accent-alt));
  }

  .cta-content {
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: var(--spacing-lg);
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-buttons .btn {
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
    backdrop-filter: blur(10px);
  }

  .cta-buttons .btn:hover {
    background: white;
    color: var(--color-dark);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .about-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .story-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .about-image {
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .step {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .step-number {
      margin: 0 auto;
    }

    .highlight-items {
      grid-template-columns: 1fr;
    }

    .expertise-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
