---
export interface Props {
  currentPath?: string;
}

const { currentPath = "/" } = Astro.props;

const menuItems = [
  { name: "Inicio", href: "/", isActive: currentPath === "/" },
  { name: "Sobre mí", href: "/sobre-mi", isActive: currentPath === "/sobre-mi" },
  { name: "Fotografía", href: "/fotografia", isActive: currentPath === "/fotografia" },
  { name: "Video", href: "/video", isActive: currentPath === "/video" },
  { name: "Dron", href: "/dron", isActive: currentPath === "/dron" },
  { name: "Contacto", href: "/contacto", isActive: currentPath === "/contacto" },
];
---

<header class="navbar" id="navbar">
  <div class="nav-container">
    <div class="logo">
      <a href="/" class="logo-brand-name">JEFILMZ</a>
    </div>

    <nav class="nav-menu">
      {menuItems.map((item) => (
        <a 
          href={item.href} 
          class={`nav-link ${item.isActive ? 'active' : ''}`}
        >
          {item.name}
        </a>
      ))}
    </nav>
    
    <!-- <a href="/#portfolio" class="btn btn-primary nav-cta">
      Ver trabajo
    </a> -->
  </div>
</header>

<style>
  .navbar {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: var(--spacing-sm) var(--spacing-sm);
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    transition: all var(--transition-normal);
    height: 70px;
  }

  .navbar.scrolled {
    background-color: rgba(255, 255, 255, 0.98);
    box-shadow: var(--shadow-md);
  }

  .nav-container {
    /* max-width: 1200px; */
    margin: 0 auto;
    padding: 0 var(--spacing-sm);
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .logo {
    flex-shrink: 0;
  }

  .logo-brand-name {
    font-size: 1.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--color-dark), var(--color-accent));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: var(--color-dark); /* Fallback para navegadores sin soporte */
    letter-spacing: -0.02em;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .logo-brand-name:hover {
    transform: scale(1.05);
  }

  .nav-menu {
    display: flex;
    gap: var(--spacing-md);
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: var(--color-dark);
    font-weight: 500;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 6px;
    transition: all var(--transition-fast);
    position: relative;
  }

  .nav-link:hover {
    color: var(--color-accent);
    background-color: rgba(255, 122, 89, 0.1);
  }

  .nav-link.active {
    color: var(--color-accent);
    font-weight: 600;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 2px;
    background-color: var(--color-accent);
    border-radius: 1px;
  }

  .nav-cta {
    font-size: 0.9rem;
    padding: var(--spacing-xs) var(--spacing-sm);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .nav-container {
      flex-direction: row;
      justify-content: space-between;
      gap: var(--spacing-sm);
    }

    .logo-brand-name {
      font-size: 1.2rem;
    }

    .nav-menu {
      flex-wrap: wrap;
      justify-content: flex-end;
      gap: var(--spacing-sm);
    }

    .nav-link {
      padding: var(--spacing-xs);
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .nav-container {
      flex-direction: column;
      text-align: center;
    }
    
    .logo-brand-name {
      font-size: 1.1rem;
      margin-bottom: var(--spacing-xs);
    }

    .nav-menu {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-xs);
      width: 100%;
    }

    .nav-link {
      font-size: 0.8rem;
      padding: var(--spacing-xs);
    }
  }
</style>

<script>
  // Scroll effect para el navbar
  function handleScroll() {
    const navbar = document.getElementById('navbar');
    if (window.scrollY > 50) {
      navbar?.classList.add('scrolled');
    } else {
      navbar?.classList.remove('scrolled');
    }
  }

  window.addEventListener('scroll', handleScroll);
  
  // Smooth scroll para links internos
  document.addEventListener('DOMContentLoaded', () => {
    const links = document.querySelectorAll('a[href^="/#"]');
    links.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href')?.substring(2);
        const targetElement = document.getElementById(targetId || '');
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>
